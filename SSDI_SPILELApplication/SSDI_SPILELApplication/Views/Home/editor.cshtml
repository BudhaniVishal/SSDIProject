@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

@using SSDI_SPILELApplication.Models
@model LoginViewModel
@{
    ViewBag.Title = "Create a Story";
}



<h2>@ViewBag.Title.</h2>
<head>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/Editor.js"></script>
</head>
<div class="row" ng-app="myapp">
    
        <section id="editorform">
                <div class="col-md-12" ng-controller="EditorController">
                    <form name="editorForm" class="myForm" required>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">Title</label>
                                <input class="col-md-10 form-control" name="title" type="text" id="title" ng-model="mydata.Title" ng-minlength="5" ng-maxlength="20" required> <br /><br />
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">Scenario</label>
                                <textarea class="col-md-10 form-control" type="text" id="scenario" ng-model="mydata.Scenario" row="6" cols="50" required></textarea> <br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">Content</label>
                                <textarea class="col-md-10 form-control" type="text" id="content" ng-model="mydata.Content" row="6" cols="50" required></textarea> <br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">Genre</label>
                                <select class="col-md-10 form-control" id="genre" ng-model="mydata.Genre" required>
                                    <option selected value="">Please Select</option>
                                    <option value="Action/Adventure">Action/Adventure</option>
                                    <option value="Business">Business</option>
                                    <option value="Career">Career</option>
                                    <option value="Comedy">Comedy</option>
                                    <option value="Detective">Detective</option>
                                    <option value="Family">Family</option>
                                    <option value="Ghost">Ghost</option>
                                    <option value="Mystery">Mystery</option>
                                    <option value="Thriller">Thriller/Suspense</option>
                                </select><br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">Type</label>
                                <select class="col-md-10 form-control" id="type" ng-model="mydata.Type" required>
                                    <option selected value="">Please Select</option>
                                    <option value="Short Stories">Short Stories</option>
                                    <option value="Article">Article</option>
                                    <option value="Poetry">Poetry</option>
                                    <option value="Fiction">Fiction</option>
                                    <option value="Non Fiction">Non Fiction</option>
                                    <option value="Classics">Classics</option>
                                </select><br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">From</label>
                                <input class="col-md-10 form-control" type="date" id="from" ng-model="mydata.From" ng-minlength="5" ng-maxlength="12" required /> <br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label class="col-md-2 control-label">To</label>
                                <input class="col-md-10 form-control" type="date" id="to" ng-model="mydata.To" ng-minlength="5" ng-maxlength="12" required/> <br /><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit Form" ng-click="myfunc.doClick()" class="btn btn-default" />
                            </div>
                        </div>
                    </form>
                    <div>
                    </div>
                </div>       
        </section>
    <div class="col-md-4">
    </div>
</div>
