@model SSDI_SPILELApplication.Models.ContributeStoryModel

@{
    ViewBag.Title = "Contribute To Story";
}

<h3>Contribute To Story</h3>
<head>
    <script src="~/Scripts/angular.min.js"></script>
</head>
@using (Html.BeginForm("ContributeStorySave", "Home", FormMethod.Post))
{
<body>
    <div ng-app="ContributeToStory" ng-controller="ContributeToStoryController">
        <form id="ContributeToStory" name="ContributeToStory">
            <table class="table">
                <tr>
                    <td>
                        @*<h3 style="text-align: center">Story Title: @Model.Title</h3>*@
                        <h3 style="text-align: center">Story Title - @Model.Title </h3>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: center">
                        <div>
                            <Label>Existing Content</Label>
                        </div>
                        @Html.TextArea("myExistingContent", Model.Content, new { @style = "min-width: 100%; min-height: 230px", @readonly =true })
                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="text-align: center">
                            <Label style="text-align: center;">Content to Add</Label>
                        </div>
                        <div>

                            <textarea rows="10" style="min-width: 100%; min-height: 100px" id="textAnswer" name="textAnswer"></textarea>

                            @*@Html.TextAreaFor(m => m.ContributionText, new { @style = "min-width: 100%; min-width: 100%" })*@
                        </div>
                        <div style="margin-top: 10px;">

                        </div>
                        <div style="margin-top: 10px;">
                            @*@Html.ActionLink("ContributeStorySave", "ContributeStorySave", Model)*@
                            <input type="submit" class="btn" value="Save" />
                        </div>
                    </td>
                </tr>
            </table>




        </form>
    </div>
</body>
}