@model SSDI_SPILELApplication.Models.StoryModel

@{
    ViewBag.Title = "StoryDetails";
}

<h3>Story Details</h3>

<head>
    <script src="~/Scripts/angular.min.js"></script>
</head>
@using (Html.BeginForm("StoryDetails", "Home", FormMethod.Post))
{
    <body>
    <div ng-app="StoryDetails" ng-controller="StoryDetailsController">
        <form id="StoryDetails" name="StoryDetails">
            <div class="form-group">
            <div style="text-align: center">
                <label style="text-align: center">Story Title - @Model.Title </label>
                </div>

                <div class="form-group" style="text-align: center">
                    <Label style="text-align: center">Story Scenario</Label>
                    @Html.TextArea("storyScenario", Model.Scenario, new {@style = "min-width: 100%; min-height: 115px", @readonly = true, @class = "form-control"})
                </div>
                <div style="text-align: center" class="form-group">
                    <Label>Story Content</Label>
                    @Html.TextArea("myExistingContent", Model.Content, new {@style = "min-width: 100%; min-height: 115px", @readonly = true, @class = "form-control"})
                </div>

                <div style="margin-top: 10px;">
                    <input type="button" class="btn" value="Back to View All Stories" onclick="window.location.href = '@Url.Action("BrowseStories", "Home")'"/>
                </div>


            </div>

        </form>
    </div>
    </body>
}
