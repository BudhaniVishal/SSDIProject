
@model SSDI_SPILELApplication.Models.BrowseStoryModel

@{
    ViewBag.Title = "View All Stories";
}
<head>
    <script src="~/Scripts/angular.min.js"></script>
</head>
@using (Html.BeginForm("FilterStories", "Home", FormMethod.Post))
{
    <body>
        <div ng-app="BrowseStory" ng-controller="BrowseStoryController">
            <form id="BrowseStories" name="BrowseStories">
                <table class="table table-striped table-hover ">
                    <tr><td></td><td></td><td></td>
                        <td style="text-align:center">
                            <h4>
                                View All Stories
                            </h4>
                        </td><td></td><td></td><td></td>
                    </tr>
                    
                    
                    <tr class="primary">
                        
                        
                        <td style="text-align: right">
                            @*<label>Search Stories </label>*@
                        @Html.TextBoxFor(model => model.SearchKey, new { placeholder = "Min 3 Characters" }) </td>
                        <td style="text-align: right">  <input type="submit" name="filterbykey" class="btn btn-default" value="Search Stories" /></td>
                            
                        <td style="text-align: right">
                            <label class="control-label"> Genre </label></td>
                        <td style="text-align: right">
                            @Html.DropDownList("SelectedGenre", Model.GenreValues, "Select Genre", new { @class = "form-control" })</td>
                        <td style="text-align: right">
                            <label class="control-label"> Type </label></td>
                        <td style="text-align: right">
                            @Html.DropDownList("SelectedType", Model.TypeValues, "Select Type", new { @class = "form-control" })</td>
                        <td style="text-align: right">
                            <input type="submit" name="filter" class="btn btn-default" value="Filter Stories" />
                        </td>
                    </tr>
                </table>

                <table class=" table table-striped table-hover">

                    <tr>
                        <th style="text-align: center">Serial No.</th>
                        <th style="text-align: center">Title</th>
                        <th style="text-align: center">Content</th>
                        <th style="text-align: center"></th>
                    </tr>

                    @for (int i = 1; i <= Model.Stories.Count; i++)
                    {
                        <tr>
                            <td style="text-align: left">
                                <label>@i.</label>
                            </td>
                            <td style="text-align: left; margin: 0px ">

                                <div style="text-align: center; overflow: auto; min-width: 250px; max-height: 50px;">
                                    @Html.DisplayFor(modelItem => Model.Stories[i - 1].Title)
                                </div>
                            </td>

                            <td style="text-align: center; overflow: auto">
                                <div style="text-align: center; overflow: auto; max-height: 50px;">
                                    @Html.DisplayFor(modelItem => Model.Stories[i - 1].Content)
                                </div>
                            </td>

                            @*@Html.HiddenFor(modelItem => Model.Stories[i - 1].StoryID)*@
                            <td style="text-align: right">
                                @*<input type="submit" name="Contribute" value="Contribute"/>*@
                                @Html.ActionLink("Contribute", "FilterStories", new { storyID = Model.Stories[i - 1].StoryID, @class = "classname" })
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Scenario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoryID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.To)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.From)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MessageString)
                                </td>*@
                        </tr>
                    }

                </table>
            </form>
        </div>
    </body>
}





