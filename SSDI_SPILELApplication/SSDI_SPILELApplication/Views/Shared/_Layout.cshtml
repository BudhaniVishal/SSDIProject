@using SSDI_SPILELApplication.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SPIEL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @*<div>*@

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">SPIEL</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">
                        @if (!AccountController.ShowLogOff)
                        {
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("View All Stories", "BrowseStories", "Home")</li>
                        }

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    <div class="container">

        <div class="row row-offcanvas row-offcanvas-left">
            <div class="container-fluid">
                @if (HttpContext.Current.Session["username"] != null)
                {
                    <div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">
                        <ul class="nav nav-sidebar">
                            <li>@Html.ActionLink("View All Stories", "BrowseStories", "Home")</li>
                            <li>@Html.ActionLink("My Stories", "BrowseCreatorStories", "Home")</li>
                            <li>@Html.ActionLink("My Contributions", "BrowseContributorStories", "Home")</li>
                            <li>@Html.ActionLink("Create New Story", "editor", "Home")</li>
                        </ul>
                    </div><!--/span-->
                }
                <div class="col-sm-9 col-md-10 main">
                    <div class="container-fluid body-content">
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - SPIEL Application</p>
                        </footer>
                    </div>

                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/bootstrap")
                    @RenderSection("scripts", required: false)
                </div>
            </div>

        </div>
    </div>
</body>
</html>
