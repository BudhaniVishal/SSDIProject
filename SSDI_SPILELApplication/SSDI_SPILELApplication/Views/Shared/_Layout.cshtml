<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SPIEL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <Label class="navbar-brand">
                    SPIEL
                </Label>
                @*@Html.ActionLink("SPIEL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Browse Stories", "BrowseStories", "Home")</li>
                </ul>
                 @Html.Partial("_LoginPartial")
            </div>
    </div>
        @if (HttpContext.Current.Session["username"] != null ){ 
        <text>
            <div class="container col-md-2">
            <nav class="navbar" id="sidebar-wrapper" role="navigation">
                <ul class="nav sidebar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="sidebar-brand">
                        <a href="#">
                            View All Stories
                        </a>  
                    </li>
                    <li>
                        @Html.ActionLink("My Stories", "BrowseCreatorStories", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("My Contribution", "BrowseContributorStories", "Home")
                    </li>
                    <li>
                        <a href="#">Create new Story</a>
                    </li>
                    
                </ul>
            </nav>
            </div>
        </text>
       }
        else{ 
            @:<div class="container col-md-1"></div>
    }
    <div class="container body-content col-md-10">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SPIEL Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</div>
</body>
</html>
