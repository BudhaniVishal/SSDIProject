@model SSDI_SPILELApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">

        <label id="lblFirstName" title="FirstName" class="col-md-2 control-label">
            First Name
        </label>
        <div class="col-md-2 input-group">
            <input type="text" name="txtFirstName" />
        </div>
    </div>


    <div class="form-group">

        <label id="lblLastName" title="LastName" class="col-md-2 control-label">
            LastName
        </label>
        <div class="col-md-2 input-group">
            <input type="text" name="txtLastName" />
        </div>
    </div>



    <div class="form-group">
        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>*@
        
        <label id="lblEmail" title="Email" class="col-md-2 control-label">
            Email-Address
        </label>
        <div class="col-md-2 input-group">
            <input type="text" name="txtEmailAddress"/>
        </div>
    </div>


    <div class="form-group">
        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>*@
        
        <label id="lblPassword" title="Password" class="col-md-2 control-label">
            Password
        </label>
        <div class="col-md-2 input-group">
            <input type="text" name="txtPassword" />
        </div>

    </div>


    <div class="form-group">
        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>*@
        
        
        <label id="lblForgotPassword" title="ForgotPassword" class="col-md-2 control-label">
            Confirm Password
        </label>
        <div class="col-md-2 input-group">
            <input type="text" name="txtForgotPassword" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">
            Select User Type
        </label>

        <div  class="col-md-2 input-group">
            <label  class="radio-inline">
                <input type="radio" name="btnRadioEditor"> Editor
            </label>
            <label class="radio-inline">
                <input type="radio" name="btnRadioWriter"> Writer
            </label>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
