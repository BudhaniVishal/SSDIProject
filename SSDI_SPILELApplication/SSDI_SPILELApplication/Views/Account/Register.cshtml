<div class="form-group" ng-app="Registration">
    <section id="RegistrationSection">
        <div class="col-md-12" ng-controller="RegistrationController">
            <form name="registrationForm" required>
                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">First Name</label>
                        <input type="text" name="txtFirstName" ng-model="mydata.FirstName" id="FirstName" class="form-control input-sm" placeholder="First Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">Last Name</label>
                        <input type="text" name="txtLastName" id="LastName" ng-model="mydata.LastName" class="form-control input-sm" placeholder="Last Name" />
                    </div>
                </div>
                
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">EmailAddress</label>
                        <input type="text" name="txtEmailAddress" id="Emailaddress" ng-model="mydata.EmailAddress" class="form-control input-sm" placeholder="Email address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">Password</label>
                        <input type="password" name="txtPassword" id="Password" ng-model="mydata.Password" class="form-control input-sm" placeholder="Passsword" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">Confirm Password</label>
                        <input type="password" name="txtForgotPassword" ng-model="mydata.ConfirmPassword" class="form-control input-sm" placeholder="Confirm Password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label class="col-md-2 control-label">Select User Type</label>
                        @*<div class="col-md-2 input-group">*@
                            <label class="radio-inline">
                                <input type="radio" value="EDITOR" ng-model="mydata.UserType" name="btnRadioEditor"> Editor
                            </label>
                            <label class="radio-inline">
                                <input type="radio" value="WRITER" ng-model="mydata.UserType" name="btnRadioWriter"> Writer
                            </label>
                        @*</div>*@
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="margin-left:200px">
                        <input type="submit" class="btn btn-default" value="Register" ng-click="myfunc.doClick()"/>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

